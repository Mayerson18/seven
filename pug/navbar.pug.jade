mixin as(x)
  each val,index in [{text:"Integraci√≥n",url:"#"},{text:"Nuestros Productos",url:"productos.html"},{text:"Contactenos",url:"#contactenos"}]
    if(index === 0)
      a.nav-item(href="#{x}") #{val.text}
    else
      a.nav-item(href="#{val.url}") #{val.text}
      
mixin navigation(className,url)
  nav.nav.nav1(class="#{className}")
    .nav-left
      a.nav-item(href="index.html")
        img(src="img/logo.png",alt="Atis",class="img-logo")
        
    span.nav-toggle
      each val in [1, 2, 3]
        span
    
    .nav-right.nav-menu.space
      +as(url)
