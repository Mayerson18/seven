mixin items(item,index)
  .item(data-hash="#{'i'+index}")
    .columns
      +casos(item.item1)
    .columns
      +casos(item.item2)

mixin casos(vak)
  each val,index in vak
    .column.casos-item
      .flex-center
        img.img-item(src="#{val.img}")
      .flex-center
        p #{val.url}
      .flex-center
        img.img-cr(src="#{val.img2}")
          
mixin lis(id,text,hash)
  if id==0
    li.li.current
      a.a(data-id="#{hash}", href="#{'#'+ hash}") #{text}
  else
    li.li
      a.a(data-id="#{hash}", href="#{'#'+ hash}") #{text}
